<section id="signature-request-form">
  <div>
    <h2>New Signature Request</h2>
  </div>
  <%= form_for @signature_request do |f| %>
    <div>
      <%= f.label :name %>
    </div>

    <div>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :email%>
    </div>

    <div>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :phone_number%>
    </div>

    <div>
      <%= f.phone_field :phone_number %>
    </div>


    <div>
      <%= f.submit 'Send Signature Request', class:"btn btn-primary" %>
    </div>
  <% end %>
</section>
